{
  "name": "ouro-rifa",
  "private": true,
  "version": "1.0.0",
  "description": "Sistema de Rifas Online",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "build": "vite build --mode production && npm run copy-redirects",
    "copy-redirects": "echo '/*    /index.html   200' > dist/_redirects",
    "build:dev": "vite build --mode development",
    "preview": "vite preview --port $PORT --host 0.0.0.0",
    "preview:local": "vite preview --port 4173",
    "lint": "eslint . --ext vue,js,jsx,cjs,mjs --fix --ignore-path .gitignore",
    "render:build": "npm ci && npm run build",
    "render:start": "npm run preview"
  },
  "dependencies": {
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "pinia": "^2.1.7",
    "axios": "^1.6.8"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "vite": "^5.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.22.0"
  },
  "keywords": [
    "vue",
    "rifa",
    "sorteio",
    "frontend"
  ],
  "author": "Jonathan Trabach",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
